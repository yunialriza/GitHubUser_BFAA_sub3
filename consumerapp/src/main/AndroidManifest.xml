<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dicoding.picodiploma.consumerapp">


    <uses-permission android:name="com.dicoding.picodiploma.githubuser_submission3.READ_DATABASE" />
    <uses-permission android:name="com.dicoding.picodiploma.githubuser_submission3.WRITE_DATABASE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GitHubUser_Submission3">

        <receiver
            android:name=".alarm.AlarmReceiver"
            android:enabled="true"
            android:exported="false" />

        <activity android:name=".view.SplashScreenActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.FavoriteActivity" />
        <activity android:name=".view.SettingActivity" />
        <activity android:name=".view.DetailActivity" />
        <activity android:name=".view.MainActivity" />

    </application>

    <queries>
        <package android:name="com.dicoding.picodiploma.githubuser_submission3" />
    </queries>

</manifest>